mixin navLink(link,name)
    a(href=link onclick="return false").nav__link.nav__link_style.nav__link_hover=name

mixin newsColumn(pic,title,textNews)
    div.news__column
        div.item-news
            img.item-news__pic(src=pic, alt="note")
            h3.item-news__title=title
            p.item-news__text=textNews


